<?xml version="1.0" encoding="utf-8"?>

<movie6.replaceview.Views.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llState"
    app:errorTitle="Error"
    app:errorContent="Error error error error error error x3"
    app:loadingTitle="Loading"
    app:loadingContent="Loading.. please wait"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="117dp"
            android:text="Result ..." />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblResult"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Submit" />
    </RelativeLayout>



</movie6.replaceview.Views.StateLayout>

